<% content_for :blog_scripts do %>
 <%= render partial: 'scripts' %>
 <%= render partial: 'fbjsinclude' %>
<% end %>   
<div class="page-header">
  <h1><%= @post.title %></h1>
</div>

<div class="font11">
<%= raw markdown @post.description %>
</div>
<%= render partial: 'fblike' %>
<%= render partial: 'disqus' %>
<%= render partial: 'fbcomments' %>
    
<% if admin? %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<% end %>
